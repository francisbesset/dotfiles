altscreen on
vbell off
autodetach on
altscreen on 
defscrollback 10000 
defutf8 on 
nonblock on 
bindkey -k k1 select 1
bindkey -k k2 select 2
bindkey -k k3 select 3
bindkey -k k4 select 4
bindkey -k k5 select 5
bindkey -k k6 select 6
bindkey -k k7 select 7
bindkey -k F2 next
bindkey -k F1 prev
bindkey "^[Od" prev # ctrl-left
bindkey "^[Oc" next # ctrl-right 
bind + resize +1 
bind - resize -1 
hardstatus alwayslastline
hardstatus string "%{wk}%{Mk}|%{-} {%{Yk}%D %m-%d-%y%{-} %{Wk}%C%a%{-}} {%{Gk}%H%{-} %l} %{Mk}|%{-} %-w %{kM}[%n %t]%{-} %+w%=%{Mk}|%{-}" 
startup_message off 
screen -t Project 1 
screen -t Project 2 
screen -t Project 3 
screen -t Project 4 
screen -t Mysql 5 
screen -t VHosts 6
screen -t Root   7 
