# some more ls aliases
alias ..='cd ..'
alias ll='ls -lh'
alias la='ls -lha'
alias l='ls -lha'
alias screen='screen -'
alias grep='grep --colour'

alias myip='lynx http://www.whatsmyip.us/'

export EDITOR=vim

if [ -f ~/.home/subversion/svn-alias ]; then
  source ~/.home/subversion/svn-alias
fi

if [ -f ~/.home/git/git-completion.bash ]; then
  source ~/.home/git/git-completion.bash
fi

if [ -f ~/.home/git/git-ps1 ]; then
  source ~/.home/git/git-ps1
fi

